<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/AppTheme.CustomButton</item>
        <item name="android:textViewStyle">@style/AppTheme.CustomText</item>
    </style>

    <style name="AppTheme.CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#757575</item>
        <item name="android:minHeight">100dp</item>
    </style>

    <style name="AppTheme.CustomText" parent="android:Widget.TextView">
        <item name="android:textColor">#F00</item>
        <item name="android:textSize">22dp</item>
    </style>

</resources>
